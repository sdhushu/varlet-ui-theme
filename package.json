{
  "name": "varlet-ute",
  "version": "2.2.1",
  "description": "Varlet UI theme editing tool",
  "keywords": [
    "Vue",
    "UI"
  ],
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "dev": "varlet-cli dev",
    "build": "varlet-cli build",
    "preview": "varlet-cli preview",
    "compile": "varlet-cli compile",
    "lint": "varlet-cli lint",
    "changelog": "varlet-cli changelog",
    "release": "pnpm compile && varlet-cli release",
    "test": "varlet-cli jest",
    "test:watch": "varlet-cli jest -w",
    "test:watchAll": "varlet-cli jest -wa",
    "create": "varlet-cli create"
  },
  "dependencies": {
    "@varlet/ui": "^2.8.3",
    "@types/file-saver": "^2.0.5",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@varlet/cli": "^2.8.4-alpha.1676992435486",
    "@varlet/eslint-config": "^2.8.3",
    "@varlet/icons": "^2.8.4-alpha.1676992435486",
    "@varlet/shared": "^2.8.3",
    "@varlet/stylelint-config": "^2.8.3",
    "@varlet/touch-emulator": "^2.8.4-alpha.1676992435486",
    "@vue/test-utils": "^2.0.2",
    "clipboard": "^2.0.6",
    "eslint": "^7.30.0",
    "lint-staged": "^10.5.0",
    "live-server": "^1.2.1",
    "lodash-es": "^4.17.21",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "^13.13.1",
    "typescript": "^4.4.4",
    "vue": "3.2.25",
    "vue-router": "4.0.12"
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{vue,css,less}": "stylelint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --allow-empty --concurrent false",
    "commit-msg": "npx --no-install varlet-cli commit-lint $1"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "site/**",
      "public/**",
      ".varlet/**"
    ],
    "extends": [
      "@varlet"
    ]
  },
  "stylelint": {
    "extends": [
      "@varlet/stylelint-config"
    ],
    "ignoreFiles": [
      "site/**",
      "public/**",
      ".varlet/**"
    ]
  },
  "browserslist": [
    "Chrome >= 54",
    "iOS >= 10"
  ],
  "packageManager": "pnpm@7.9.0",
  "engines": {
    "pnpm": ">=7.9"
  }
}
